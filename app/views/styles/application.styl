@import 'nib'

@import '_base'
@import '_ui'

// Import your styles here

@import '_states'
@import '_layout'
@import '_responsive'


body
  margin: 0
  padding: 0
  background-color: #fff
  font-family: "Helvetica Neue", Helvetica, Arial
  letter-spacing: -0.03em
  color: #000
  font-size: 12px

.container
  position: fixed
  margin: 0
  z-index: 1000
  top: 100px
  left: 100px

  h2
    font-size: 32px
    margin: 0
    padding: 0
  h2.selected
    color: #fff
  p
    font-size: 16px
    margin: 0
    padding: 0

#chart
  position: fixed
  top: 0px

  width: 100%
  height: 100%

  svg
    width: 100%
    height: 100%

    text
      pointer-events: none

    path
      stroke: #fff
      fill-rule: evenodd
      opacity: 0.8
      stroke-width: 0.2

    circle
      stroke: #999
      pointer-events: all
      fill-opacity: 0.3


      &.parent
        fill-opacity: .1
        stroke: steelblue
        stroke-width: 0.2px

      &:hover
        stroke: #fff
        stroke-width: 1px



