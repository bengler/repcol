@import 'nib'

@import '_base'
@import '_ui'

// Import your styles here

@import '_states'
@import '_layout'
@import '_responsive'


body
  margin: 0
  padding: 0
  background-color: #fff
  font-family: "Helvetica Neue", Helvetica, Arial
  letter-spacing: -0.03em
  color: #000
  font-size: 12px

.container
  position: fixed
  margin: 0
  top: 100px
  left: 100px
  width: 80%
  z-index: 1000

  h2
    font-size: 36px
    margin: 0
    padding: 0

  h2.selected
    color: #fff

  p
    font-size: 18px
    margin-top: 3px
    padding: 0

  p.lifespan
    font-weight: bold
    float: left
    margin-right: 15px

  img
    height: 50px
    margin: 5px
    opacity: 0.3
    display: block
    float: left

  img:hover
    opacity: 1.0

  .imageContainer
    position: fixed
    bottom: 10px

img.zoomedImage
  left: 0
  right: 0
  height: 100%
  position: fixed
  top: 0
  display: block
  display: none
