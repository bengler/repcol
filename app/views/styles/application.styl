@import '_states'
@import '_layout'
@import '_responsive'


body
  margin: 0
  padding: 0
  background-color: #fff
  font-family: "Helvetica Neue", Helvetica, Arial
  letter-spacing: -0.03em
  color: #000
  font-size: 12px

.container
  position: fixed
  margin: 0
  top: 100px
  left: 100px
  width: 80%
  z-index: 1000

  h2
    font-size: 36px
    margin: 0
    padding: 0

  h2.selected
    color: #fff

  p
    font-size: 18px
    margin-top: 3px
    padding: 0

  p.lifespan
    font-weight: bold
    float: left
    margin-right: 15px


.imageContainer
  position: fixed
  bottom: 10px
  z-index: 2000


  img
    height: 50px
    margin: 5px 0px 5px 0px
    opacity: 0.3
    display: block
    float: left

  img:hover
    opacity: 1.0

.zoomedImageContainer
  position: fixed
  top: 0
  bottom: 0
  left: 0
  right: 0
  background-color: rgba(0,0,0,0.2)
  z-index: 1500

  img.zoomedImage
    margin-left: auto
    margin-right: auto
    max-width: 100%
    max-height: 100%
