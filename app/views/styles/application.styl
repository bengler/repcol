// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
@import 'nib'

@import '_base'
@import '_ui'

// Import your styles here

@import '_states'
@import '_layout'
@import '_responsive'


body
  margin: 0
  padding: 0
  font-family: "Helvetica Neue", Helvetica, Arial
  color: #000
  font-size: 12px
  background-color: #d0d0d9

.escHint
  padding-left: 20px

.warnings
    font-size: 16px
    width: 100%
    margin: 00px auto 10px auto
    background-color: #333
    text-align: center

    p
      margin: 0px

  .shouldWork, .maybeWork, .cantWork, .cantWorkMobile 
    display: none
    padding: 10px
    color: #fdd
    font-weight: 800

    &.active
      display: block

.warnings>.shouldWork
  color: #eee
  font-weight: 300
  

.intro
  font-size: 14px
  line-height: 20px
  max-width: 730px
  background-color: #eee
  padding: 20px
  margin: 0px auto
  margin-bottom: 40px

  h3
    font-size: 42px
    margin: 20px 0px 40px 0px

  .copy
    width: 45%
    float: left
    margin-bottom: 20px

  @media all and (max-width: 659px)
    .copy
      width: 100%

  .copy.navigation
    display: none
    margin-left: 20px


  .sectionNav.showNavigation
    float: right
    margin-right: 20px

  .video
    position: relative;
    padding-bottom: 26.25%; /* 16:9 */
    height: 0;
    width: 45%
    float: right

  .video iframe
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%

  @media all and (max-width: 659px)
    .video
      padding-bottom: 56.25%; /* 16:9 */
      margin: 00px 00px 00px 40px
      width: 100%


  a.button
    text-align: center
    display: block
    width: 100%
    padding: 10px
    background-color: #aef
    color: #000
    cursor: pointer
    font-weight: 800
    margin-top: 20px
    font-size: 20px
    clear: both
    margin: 40px 0px

    &:hover
      text-decoration:none
      background-color: #bff

  a.button.deactivated
    background-color: #d8d8d8

    &:hover
      background-color: #d8d8d8
      
  p
    margin: 0 0 10px 0

  p.last
    margin: 0 0 40px 0


.container
  letter-spacing: -0.03em
  position: fixed
  margin: 0
  top: 50px
  left: 50px
  width: 80%
  z-index: 1000

  a
    display: block

  h2
    font-size: 36px
    margin: 0
    padding: 0

  h2.selected
    color: #fff

  p
    font-size: 18px
    margin-top: 3px
    padding: 0

  p.lifespan
    font-weight: bold
    float: left
    margin-right: 15px

.photographer
  position: fixed
  bottom: 25px
  right: 10px
  color: #fff
  z-index: 16500
  font-size: 14px
  letter-spacing: 0em
  opacity: 0.5
  pointer-events: none


.title
  position: fixed
  bottom: 45px
  right: 10px
  color: #fff
  z-index: 16500
  font-size: 32px
  opacity: 0.9
  text-shadow: 0px 0px 4px rgba(30,30,30,0.6);
  pointer-events: none

 .title.onlyReference
  font-size: 16px

.imageContainer
  position: fixed
  bottom: 10px
  z-index: 2000
  background-color: rgba(0,0,0,0.1)
  padding-left: 10px
  height: 110px
  width: 100%

  .navBlock
    position: absolute
    right: 20px
    top: -40px

    a
      text-decoration: none
      width: 30px
      height: 30px
      background-color: rgba(180,200,222,0.8)
      display: block
      cursor: pointer
      color: #000
      float: left
      line-height: 25px
      text-align: center
      font-weight: 900
      font-size: 22px
      border-radius: 3px

      &.next
        margin-left: 10px

      &.deactivated
        opacity: 0.1

      &.deactivated:hover
        opacity: 0.1


    a:hover
      background-color: rgba(255,255,255,0.9)

  img
    height: 50px
    margin: 5px 5px 5px 5px
    opacity: 0.3
    display: block
    float: left

  img:hover
    opacity: 1.0

.zoomedImageContainer
  position: fixed
  top: 0
  bottom: 0
  left: 0
  right: 0
  background-color: rgba(0,0,0,0.7)
  z-index: 1500
  display: none

  img.zoomedImage
    max-height: 100%
    max-width: 100%
    display: block
    position: inline
    margin-left: auto
    margin-right: auto
